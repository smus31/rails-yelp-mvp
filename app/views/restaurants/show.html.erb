<%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary"%>


<h2><%= @restaurant.name %></h2>
<p>category: <%= @restaurant.category %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Number: <%= @restaurant.phone_number %></p>




<%# <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%> %>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %> <%= review.content %></li>
  <% end %>
</ul>

<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>



<%= link_to "Back to list", restaurants_path, class: "btn btn-primary"%>
